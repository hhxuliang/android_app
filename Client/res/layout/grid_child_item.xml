<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/framelayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <com.kids.activity.imagescan.MyImageView
        android:id="@+id/child_image"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:background="@drawable/friends_sends_pictures_no"
        android:scaleType="fitXY" />

    <CheckBox
        android:id="@+id/child_checkbox"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/pictures_select_icon" />
    
    <ImageView
        android:id="@+id/ItemImage_video"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal|center_vertical|center"
        android:background="@drawable/arrowright" 
        android:visibility="gone"/>

</FrameLayout>