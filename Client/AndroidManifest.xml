<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.way.chat.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="15" />
    <!-- 手机振动的权限 -->
    <uses-permission android:name="android.permission.VIBRATE"/>  
    <!-- 指定添加安装快捷方式的权限 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" /><uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-permission android:name="android.permission.RESTART_PACKAGES"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:name="com.kids.activity.chat.MyApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.kids.activity.chat.Whatsnew">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kids.activity.chat.WelcomeActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name="com.kids.activity.chat.LoginActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity
            android:name="com.kids.activity.chat.RegisterActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible">
        </activity>

        <service android:name="com.kids.activity.chat.GetMsgService" >
        </service><activity android:name="com.kids.activity.chat.MyMainActivity" android:launchMode="singleTask"></activity>

        <activity
            android:name="com.kids.activity.chat.FriendListActivity">
        </activity><activity android:name="com.kids.activity.chat.Newfriends"></activity>
        <activity android:name="com.kids.activity.chat.Tab1" >
        </activity>
        <activity
            android:name="com.kids.activity.chat.Tab2"
            android:launchMode="singleTask" >
        </activity>
        <activity android:name="com.kids.activity.chat.Tab3" >
        </activity>
        <activity
            android:name="com.kids.activity.chat.ChatActivity"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity android:name="com.kids.activity.chat.CameraProActivity" android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name="com.kids.activity.chat.SystemCatalogActivity"></activity>
        <activity android:name="com.kids.activity.chat.SelectPicActivity">
        </activity>
        <activity android:name="com.kids.activity.imagescan.ShowImageActivity"></activity>
        <activity android:name="com.kids.activity.imagescan.MultiSelImageActivity"></activity>
        <activity android:name="com.kids.activity.chat.MoreActionActivity"></activity>
        <activity android:name="com.kids.activity.calendar.ClassCalenderActivity"></activity>
        <activity android:name="com.kids.activity.chat.ActionActivity"></activity>
        <activity android:name="com.kids.activity.chat.WebActivity"></activity>
        
        
        
        
    </application>

</manifest>